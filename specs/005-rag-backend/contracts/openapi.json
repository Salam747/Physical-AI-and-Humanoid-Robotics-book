{
  "openapi": "3.0.0",
  "info": {
    "title": "Physical AI Book RAG API",
    "description": "An API for querying the 'Physical AI and Humanoid Robotics' book using Gemini.",
    "version": "1.0.0"
  },
  "paths": {
    "/health": {
      "get": {
        "summary": "Health Check",
        "description": "Ensures the server is up and running.",
        "tags": ["Status"],
        "responses": {
          "200": {
            "description": "Server is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string", "example": "ok" },
                    "message": { "type": "string", "example": "Server is healthy" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/query": {
      "post": {
        "summary": "Query the RAG Pipeline",
        "description": "Receives a question and optional selected text, and returns an answer from the RAG pipeline.",
        "tags": ["RAG"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/QueryRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/QueryResponse"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/ingest": {
      "post": {
        "summary": "Trigger Data Ingestion",
        "description": "Triggers the data ingestion process for a given file. This is a one-time setup process.",
        "tags": ["Admin"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/IngestRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Ingestion successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string", "example": "success" },
                    "message": { "type": "string", "example": "Data from 'path/to/file.md' ingested successfully." }
                  }
                }
              }
            }
          },
          "404": {
            "description": "File not found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "QueryRequest": {
        "type": "object",
        "properties": {
          "question": {
            "type": "string",
            "description": "The user's question."
          },
          "selected_text": {
            "type": "string",
            "description": "Optional text selected by the user in the frontend."
          }
        },
        "required": ["question"]
      },
      "QueryResponse": {
        "type": "object",
        "properties": {
          "answer": {
            "type": "string",
            "description": "The answer generated by the RAG pipeline."
          }
        }
      },
      "IngestRequest": {
        "type": "object",
        "properties": {
          "file_path": {
            "type": "string",
            "description": "The path to the book content file (e.g., 'data/my_book.txt')."
          }
        },
        "required": ["file_path"]
      }
    }
  }
}
